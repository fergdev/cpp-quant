  {
    "version": 6,
    "configurePresets": [
      {
        "name": "ninja-conan",
        "displayName": "Ninja + Conan",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/conan_toolchain.cmake",
          "CMAKE_BUILD_TYPE": "Release",
          "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "ninja-conan",
        "configurePreset": "ninja-conan"
      }
    ],
    "testPresets": [
      {
        "name": "ninja-conan",
        "configurePreset": "ninja-conan"
      }
    ]
  }
